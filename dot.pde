void setup(){
  setupPrint();
  print_dot();
}

//場づくり
void setupPrint(){
  background(140, 140, 245);
  size(size_i, size_i);
  //マス目
  for(int i=0; i<size_i; i+=division){
    stroke(0,0,0);
    line(i, 0, i, size_i);
    line(0, i, size_i, i);
    if(i%100==0){
      stroke(255, 0,0);
      line(i, 0, i, size_i);
      line(0, i, size_i, i);
      noStroke();
      print(i);
    }
  }
}

//描画
void print_dot(){
  dot(red_x, 230, 10, 10);
  dot(green_x, 110, 130, 30);
  dot(yellow_x, 255, 200, 30);
}

//ドットを配列に沿ってうつ
void dot(int point_x[], int r, int g, int b){
  int row = 0;
  
  for(int i=0; i<point_x.length; i++){
    if(point_x[i] != -1){
      fill(r, g, b);
      rect(point_x[i], row, division, division);
      noFill();
    }else{
      row+=division;
    }
  }
}
