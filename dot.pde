int green_x[] = {-1,-1,180,200,220,280,-1,160,200,280,-1,160,200,220,300,-1,160,180,280,300,320,340,-1,-1,180,200,240,260,280,-1,160,180,200,240,260,300,320,340,-1,140,160,180,200,240,260,300,320,340,360,-1,180,320,-1,-1,-1,-1,160,180,200,300,320,340,-1,140,160,180,200,300,320,340,360};

